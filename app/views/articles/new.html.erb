<%= tinymce_assets %>
<%= tinymce %>

<h2> Create a new Article </h2>
<%= form_for @article ,:html => { :multipart => true } do |article| %>
  <%= article.label :title %> :
  <%= article.text_field :title, :autofocus => true %><br>
  <%= display_error(@article, 'title') %><br>

  Upload XX : <%= article.file_field :avatar %>
  <%= display_error(@article, 'avatar') %><br><br>

  Select Article's category :
  <% @categories = Category.all %>
  <%= select_tag 'category_id', options_from_collection_for_select(@categories, 'id', 'name', @categories.first.id) %><br>
  <%= display_error(@article, 'category') %><br>

  <%= article.label :content %>
  <%= article.text_area :content, :class => "tinymce", :cols => '85', :rows => '50' %><br>
  <%= display_error(@article, 'content') %><br>
  
  <%= article.submit %>
<% end %>
