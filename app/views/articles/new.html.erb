<h2> Add a new Article </h2>
<%= form_for @article do |article| %>
  <%= article.label :title %>
  <%= article.text_field :title %><br>
  <%= display_error(@article, 'title') %>

  <%= article.label :content %>
  <%= article.text_area :content %><br>
  <%= display_error(@article, 'content') %>
  <br>
  <%= article.submit %>
<% end %>